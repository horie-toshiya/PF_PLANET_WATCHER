<h4>投稿詳細</h4>

<table class="table table-hover table-inverse">
      <tr>
       <td>施設名</td>
         <td>
          <%= @main_content.facility %>
         </td>
      </tr>
      <tr>
       <td>営業時間</td>
         <td>
          <%= @main_content.time %>
         </td>
      </tr>
      <tr>
       <td>説明文</td>
        <td>
          <%= @main_content.appeal %>
        </td>
      </tr>
      <tr>
       <td>料金</td>
        <td>
          <%= @main_content.fee %>
        </td>
      </tr>
      <tr>
       <td>住所</td>
        <td>
          <%= @main_content.address %>
        </td>
      </tr>
      <tr>
       <td>アクセス</td>
        <td>
          <%= @main_content.access %>
        </td>
      </tr>
      <tr>
       <td>コメント一覧</td>
        <td>
          <%= @main_comment.comment_content %>
        </td>
      </tr>
      <tr>
      <%= form_with(model:[@main_content, @main_comment], local: true) do |f| %>
        <td><%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %></td>
        <td>
         <%= f.submit "送信する" %>
        </td>
       </tr>
      <% end %>
</table>